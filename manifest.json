{

    "manifest_version": 2,
    "name": "Alice's Authenticator",
    "version": "1.1.1",

    "description": "An everyday TOTP authenticator",
    "author": "atctwo",

    "browser_action": {
        "default_icon": "icons/totp.png",
        "default_title": "Alice's Authenticator",
        "default_popup": "totp.html"
    },

    "icons": {
        "48": "icons/totp-48.png",
        "96": "icons/totp-96.png"
    },

    "permissions": [
        "activeTab",
        "storage"
    ]
}